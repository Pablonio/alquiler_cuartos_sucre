generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_SUPABASE_URL")
}

model usuario {
  id                Int       @id @default(autoincrement())
  nombre            String
  email             String    @unique
  contrasena        String
  telefono          String    @unique // Considera si necesitas esta restricci√≥n basado en tu caso de uso
  direccion         String
  ciudad            String
  fotoUrl           String
  fechaNacimiento   String?
  fechaDeRegistro   DateTime  @default(now())
  ci                String    @unique
  rol               UserRole  @default(USUARIO)
}

enum UserRole {
  ADMIN
  PROPIETARIO
  USUARIO
  BANEADO
}
